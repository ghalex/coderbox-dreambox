doctype html
html(lang="en")
	head
		title Dreambox - Articles, books, tutorials, jobs and meet-ups releated to your dream tech job.
		link(rel='icon', href='/images/favicon.ico', type='image/x-icon')

		block meta
			meta(charset='utf8')
			meta(name="title", content="Dreambox")
			meta(name="apple-mobile-web-app-capable", content="yes")
			meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
			meta(name="application", content="Dreambox")

		block fonts
			link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700')

		block css
			link(rel='stylesheet', href='/static/build/bundle.css')
		
	body
		div#app
		
		block scripts
			script(src='/static/build/vendors.js')
			script(src='/static/build/bundle.js')